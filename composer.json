{
    "name": "ezyang/htmlpurifier",
    "description": "Standards compliant HTML filter written in PHP",
    "type": "library",
    "keywords": ["html"],
    "homepage": "http://htmlpurifier.org/",
    "license": "LGPL-2.1-or-later",
    "authors": [
        {
            "name": "Edward Z. Yang",
            "email": "admin@htmlpurifier.org",
            "homepage": "http://ezyang.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-ctype": "*",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-iconv": "*",
        "ext-exif": "*"
    },
    "require-dev": {
        "simpletest/simpletest": "^1.2.0",
        "phpunit/phpunit": "^9.0",
        "spatie/phpunit-snapshot-assertions": "^4.0",
        "mockery/mockery": "^1.3",
        "vimeo/psalm": "^3.11",
        "pear/net_idna2": "^0.2.0",
        "infection/infection": "^0.16.3",
        "cerdic/css-tidy": "^1.7",
        "squizlabs/php_codesniffer": "^3.5",
        "sensiolabs/security-checker": "^6.0",
        "php-parallel-lint/php-parallel-lint": "^1.0"
    },
    "suggest": {
        "ext-bcmath": "Makes math much faster",
        "ext-posix": "Can use Posix if provided",
        "ext-exif": "For reading image info",
        "ext-xmlwriter": "For writing Interchange files"
    },
    "autoload": {
        "psr-4": {
            "HTMLPurifier\\": "src"
        },
        "files": [
            "src/constants.php",
            "library/HTMLPurifier/Lexer/PH5P.php",
            "extras/FSTools.php",
            "extras/FSTools/File.php",
            "extras/ConfigDoc/HTMLXSLTProcessor.php"
        ]
    },
    "autoload-dev": {
        "psr-0": { "HTMLPurifier": "tests" },
        "psr-4": {
            "HTMLPurifier\\Tests\\": "tests/PHPUnit"
        }
    },
    "scripts": {
        "simpletest": "@php tests/index.php",
        "snapshots": [
            "Composer\\Config::disableProcessTimeout",
            "@php vendor/bin/phpunit -d memory_limit=-1 --testsuite Snapshots"
        ],
        "unit": "@php vendor/bin/phpunit -d memory_limit=-1 --testsuite Unit",
        "vtest": "@php vendor/bin/phpunit -d memory_limit=-1 --testsuite VTest",
        "htmlt": "@php vendor/bin/phpunit -d memory_limit=-1 --testsuite HTMLT",
        "test": [
            "@unit",
            "@vtest",
            "@htmlt"
        ],
        "infect": [
            "Composer\\Config::disableProcessTimeout",
            "@php -d memory_limit=-1 vendor/bin/infection -j8 --only-covered"
        ],
        "psalm": "@php vendor/bin/psalm --threads=8",
        "codestyle": "@php vendor/bin/phpcs --standard=PSR12 --extensions=php src",
        "lint": "@php vendor/bin/parallel-lint -j 8 --no-progress src"
    }
}
